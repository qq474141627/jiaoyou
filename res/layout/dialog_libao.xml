<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/transparent_80"
    android:orientation="vertical">

    <RelativeLayout 
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center">
    <View
        android:layout_marginTop="28dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/white"/>
     <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/bg_libao_1"
        android:scaleType="fitXY"/>  
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:src="@drawable/bg_libao_2"
        android:scaleType="fitXY"/>  
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_libao"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/btn_warning"
        android:gravity="center"
        android:text="@string/dialog_libao_btn"
        android:textColor="#ffff00"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/dialog_libao_text"
        android:textColor="@color/listview_text2"
        android:textSize="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
